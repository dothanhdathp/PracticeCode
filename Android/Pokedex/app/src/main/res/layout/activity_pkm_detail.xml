<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PkmDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
<!-- Pokemon name text -->
        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:gravity="center"
            android:fontFamily="serif-monospace"
            android:text="Pokemon"/>
<!-- Image -->
        <ImageView
            android:id="@+id/pokemon_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="37dp" />
<!-- Stats zone -->
<!--        HP  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/static_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="HP     :"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/p_hp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text=""
                android:gravity="right"
                android:layout_toRightOf="@+id/static_hp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ProgressBar
                android:id="@+id/p_bar_hp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/p_hp"
                android:layout_alignParentRight="true"
                android:scaleY="5"/>
        </RelativeLayout>
<!--        Atk -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/static_atk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Attack :"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/p_atk"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text=""
                android:gravity="right"
                android:layout_toRightOf="@+id/static_atk"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ProgressBar
                android:id="@+id/p_bar_atk"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/p_atk"
                android:layout_alignParentRight="true"
                android:scaleY="5"/>
        </RelativeLayout>
<!--        Def -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/static_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Defense:"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/p_def"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text=""
                android:gravity="right"
                android:layout_toRightOf="@+id/static_def"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ProgressBar
                android:id="@+id/p_bar_def"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/p_def"
                android:layout_alignParentRight="true"
                android:scaleY="5"/>
        </RelativeLayout>
<!--        Satk-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/static_Satk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Sp.Atk :"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/p_Satk"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text=""
                android:gravity="right"
                android:layout_toRightOf="@+id/static_Satk"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ProgressBar
                android:id="@+id/p_bar_Satk"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/p_Satk"
                android:layout_alignParentRight="true"
                android:scaleY="5"/>
        </RelativeLayout>
<!--        Sdef-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/static_Sdef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Sp.Def :"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/p_Sdef"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text=""
                android:gravity="right"
                android:layout_toRightOf="@+id/static_Sdef"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ProgressBar
                android:id="@+id/p_bar_Sdef"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/p_Sdef"
                android:layout_alignParentRight="true"
                android:scaleY="5"/>
        </RelativeLayout>
<!--        spd -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/static_spd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Speed  :"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/p_spd"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text=""
                android:gravity="right"
                android:layout_toRightOf="@+id/static_spd"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ProgressBar
                android:id="@+id/p_bar_spd"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/p_spd"
                android:layout_alignParentRight="true"
                android:scaleY="5"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/static_total_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Total  :"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/p_total_stats"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text=""
                android:gravity="right"
                android:layout_toRightOf="@+id/static_total_stats"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/button_test"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Test button"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>