<?xml version="1.0" encoding="utf-8"?>
<!--
    Tad comment
    package="com.example.broadcast" => add this for use broadcast receiver
    Add new message type to <intent-filter>...</intent-filter> for what message type you want to listened.
        [+] In this example, i use
            <action android:name="android.intent.action.CHARGING"/> -> This for listen charging status
            ## If you need more, please find "System Broadcast Intents" and read i
        [+] mention: this for listening message from system.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.broadcast">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Broadcast">
        <receiver
            android:name=".MyTestReceiver"
            android:enabled="true"
            android:exported="true">
            <!-- Fill which broadcast you want to listen in here -->
            <!-- android:name  =  name of class which receive message -->
            <intent-filter>
                <action android:name="android.media.VOLUME_CHANGED_ACTION" />
                <action android:name="com.example.broadcast.MY_DEFINED_ACTION" />
            </intent-filter>
        </receiver>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>